<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
        
        <p>URL Generated : localhost:8000/url/<%= id %></p>
    <% } %>
    <% if (locals.userEmail) { %>
        
        <p>Hello  <%= userEmail %></p>
    <% } %>
    
    <div>
        <form method="POST" action="/url">
            <label >Enter Your URL</label>
            <input type="text" name="url" placeholder="https://example.com/">
            <button type="submit">Generate Short URL</button>
        </form>
    </div> 
    <div>
        <% if (locals.data) { %>
            <table>
                <thead>
                    <th>S.No</th>
                    <th>ShortId</th>
                    <th>RedirectURL</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% data.forEach((d,index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= d.shortID %></td>
                            <td><%= d.redirectUrl %></td>
                            <td><%= d.visitHistory.length %></td>
                        </tr>
                     
                    <% }) %>
                    
                    
                </tbody>
            </table>
         
        <% } %>
    </div>  
</body>
</html>
